<script>
document.addEventListener('DOMContentLoaded', function() {
  // AI 봇 목록 아이템 클릭 이벤트 핸들러 등록
  document.querySelectorAll('.sidebar a[data-bot-name]').forEach(item => {
    item.addEventListener('click', function(e) {
      e.preventDefault();
      
      // 선택된 봇의 이름 가져오기
      const selectedBotName = this.getAttribute('data-bot-name');
      
      // 채팅 인터페이스 변경하기
      const chatHeader = document.querySelector('.chat-header h2');
      if (chatHeader) {
        chatHeader.textContent = 'Chat with ' + selectedBotName;
      }

      // 채팅 인터페이스의 메시지를 초기화하거나 변경하는 로직 추가...
    });
  });
});
</script>
